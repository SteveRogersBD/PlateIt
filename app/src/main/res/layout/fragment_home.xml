<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plain_white">
    
    <!-- Header Section (kept from original) -->
    <ImageView
        android:id="@+id/imgLogoSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-black"
        android:text="PlateIt"
        android:textColor="@color/tech_black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/imgLogoSmall"
        app:layout_constraintStart_toEndOf="@id/imgLogoSmall"
        app:layout_constraintTop_toTopOf="@id/imgLogoSmall" />

    <!-- Unified Search Bar -->
    <LinearLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/search_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogoSmall">

        <EditText
            android:id="@+id/etPasteUrl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Paste recipe link..."
            android:inputType="textUri"
            android:maxLines="1"
            android:textColor="@color/tech_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btnPaste"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/ic_menu_save"
            app:tint="@color/tech_black" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#E0E0E0"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/btnScan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera_alt"
            app:tint="@color/tech_black" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTrending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-bold"
        android:text="Your Smart Cookbook"
        android:textColor="@color/tech_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBarContainer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTrending" />

</androidx.constraintlayout.widget.ConstraintLayout>
