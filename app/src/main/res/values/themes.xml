<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlateIt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/banana_yellow</item>
        <item name="colorPrimaryVariant">@color/banana_yellow_dark</item>
        <item name="colorOnPrimary">@color/tech_black</item>
        
        <item name="colorSecondary">@color/gemini_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:colorBackground">@color/plain_white</item>
        <item name="colorSurface">@color/plain_white</item>
        <item name="colorOnSurface">@color/tech_black</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/plain_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.PlateIt" parent="Base.Theme.PlateIt" />
    <style name="Theme.PlateIt.BottomNav" parent="ThemeOverlay.Material3.DynamicColors.Light">
        <item name="colorSecondaryContainer">@color/banana_yellow</item>
        <item name="colorOnSecondaryContainer">@color/tech_black</item>
    </style>
</resources>